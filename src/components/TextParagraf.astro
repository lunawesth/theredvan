---
const { title, textCols = 1 } = Astro.props;
import Heading from "./Heading.astro";
---

<div class="grid md:grid-cols-3 gap-6">
  <Heading
    htmlheading="h3"
    size="medium"
    stylingclasses="uppercase text-dark md:col-span-1">{title}</Heading
  >

  <div
    class={textCols === 2
      ? "md:col-span-2 grid md:grid-cols-2 gap-4"
      : "md:col-span-2"}
  >
    <slot />
  </div>
</div>
