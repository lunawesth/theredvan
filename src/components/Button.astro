---
const { variant, type = "button", href, ...rest } = Astro.props;

const base = "rounded-4xl px-4 py-2 button cursor-pointer";

const variants = {
  header: "btn-header text-dark font-bold uppercase",
  light: "btn-light text-dark font-bold uppercase",
  dark: "btn-dark text-light font-bold uppercase",
};

const classes = `${base} ${variants[variant]} ${rest.class ?? ""}`;
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} {...rest} class={classes}>
      <slot />
    </button>
  )
}
